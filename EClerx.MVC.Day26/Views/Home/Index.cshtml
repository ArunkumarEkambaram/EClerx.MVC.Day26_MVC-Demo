@model EClerx.MVC.Day26.ViewModels.ProductsByCategoryVM

@{
    ViewBag.Title = "Home Page";
}

<div class="container">
    <div class="row">
        <div class="col-6">
            <h2>Search Product By Category</h2>
        </div>
        <hr />

        @using (Html.BeginForm("GetProducts", "Home", FormMethod.Get))
        {
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Select a Category</label>
                <div class="col-sm-3">
                    @Html.DropDownList("CategoryName", Model.Categories, "--Select--", new { @class = "form-select" })                    
                </div>
                <div class="col-sm-4">
                    <button type="submit" class="btn btn-success">Search</button>
                </div>
            </div>
        }

    <div>
        @if (Model.Products != null)
        {
            if (Model.Products.Count() > 0)
            {
                <div class="col-6 mb-3">
                    <table class="table table-striped table-hover">
                        <tr>
                            <th>Product Name</th>
                            <th>Price</th>
                            <th>Quantity</th>
                        </tr>
                        @foreach (var prd in Model.Products)
                        {
                            <tr>
                                <td>@prd.ProductName</td>
                                <td>@prd.Price</td>
                                <td>@prd.Quantity</td>
                            </tr>
                        }
                    </table>
                </div>
            }
            else
            {
                <div class="h3">No Records</div>
            }
        }

    </div>
    </div>
</div>