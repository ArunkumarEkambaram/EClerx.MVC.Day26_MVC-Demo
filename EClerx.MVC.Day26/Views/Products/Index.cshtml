<div class="container">
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <h2>Product Details</h2>

            <table class="table table-striped table-hover">
                <tr>
                    <th>Product Name</th>
                    <th>Category</th>
                    <th>Price</th>
                    <th>Quantity</th>
                </tr>
                @foreach (var prd in Model)
                {
                    <tr>
                        <td>@prd.ProductName</td>
                        <td>@prd.Category</td>
                        <td>@prd.Price</td>
                        <td>@prd.Quantity</td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>

