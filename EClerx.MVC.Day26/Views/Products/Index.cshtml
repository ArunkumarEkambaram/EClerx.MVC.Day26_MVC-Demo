@model IEnumerable<EClerx.MVC.Day26.Models.Product>

@{
    ViewBag.Title = "Index";
}


@*<ul>
        @foreach (var prd in Model)
        {
            <li>@prd.ProductName</li>
        }

    </ul>*@

<div class="container">
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <h2>Product Details</h2>

            <table class="table table-striped table-hover">
                <tr>
                    <th>Product Id</th>
                    <th>Product Name</th>
                </tr>
                @foreach (var prd in Model)
                {
                    <tr>
                        <td>@prd.Id</td>
                        @*<td><a href="/Products/Details/@prd.Id">@prd.ProductName</a></td>*@
                        <td>@Html.ActionLink(prd.ProductName, "Details", "Products", new { id = prd.Id }, null) </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>

